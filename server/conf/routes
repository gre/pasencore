# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()
GET     /question/new               controllers.Application.newQuestion()
POST    /question/postNew           controllers.Application.postNewQuestion()

POST    /api/users/:name            controllers.Application.createUser(name: String)
GET     /api/users                  controllers.Application.users()
GET     /api/users/:name            controllers.Application.user(name: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
